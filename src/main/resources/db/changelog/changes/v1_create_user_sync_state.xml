<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="v1-09-create-user-sync-state" author="diary">
        <createTable tableName="user_sync_state">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="entity_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="last_updated" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addPrimaryKey
                tableName="user_sync_state"
                columnNames="user_id, entity_type"
                constraintName="pk_user_sync_state"/>

        <addForeignKeyConstraint
                baseTableName="user_sync_state"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_user_sync_state_user"
                onDelete="CASCADE"/>

        <createIndex indexName="idx_sync_user"
                     tableName="user_sync_state">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_sync_user_type"
                     tableName="user_sync_state">
            <column name="user_id"/>
            <column name="entity_type"/>
        </createIndex>

        <createIndex indexName="idx_sync_entity_type"
                     tableName="user_sync_state">
            <column name="entity_type"/>
        </createIndex>

        <createIndex indexName="idx_sync_last_updated"
                     tableName="user_sync_state">
            <column name="last_updated"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>

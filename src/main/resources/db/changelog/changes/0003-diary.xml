<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!-- ========================= -->
    <!-- 0003 — DIARY ENTRY -->
    <!-- ========================= -->
    <changeSet id="0003-diary-entry" author="system">

        <createTable tableName="diary_entry">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="what_happened_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="what_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="when_started" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="when_ended" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="duration" type="INT"/>

            <column name="how_you_were_feeling" type="SMALLINT"/>

            <column name="any_description" type="VARCHAR(1000)"/>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>

        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_diary_entry_user"
                baseTableName="diary_entry"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                constraintName="fk_diary_entry_what_happened"
                baseTableName="diary_entry"
                baseColumnNames="what_happened_id"
                referencedTableName="dictionary_item"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                constraintName="fk_diary_entry_what"
                baseTableName="diary_entry"
                baseColumnNames="what_id"
                referencedTableName="dictionary_item"
                referencedColumnNames="id"/>

    </changeSet>

    <!-- ========================= -->
    <!-- 0003 — ACTIVITY ITEM -->
    <!-- ========================= -->
    <changeSet id="0003-activity-item" author="system">

        <createTable tableName="activity_item">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="dict_name_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="dict_unit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="count" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="diary_entry_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>

        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_activity_item_diary_entry"
                baseTableName="activity_item"
                baseColumnNames="diary_entry_id"
                referencedTableName="diary_entry"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                constraintName="fk_activity_item_dict_name"
                baseTableName="activity_item"
                baseColumnNames="dict_name_id"
                referencedTableName="dictionary_item"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                constraintName="fk_activity_item_dict_unit"
                baseTableName="activity_item"
                baseColumnNames="dict_unit_id"
                referencedTableName="dictionary_item"
                referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>

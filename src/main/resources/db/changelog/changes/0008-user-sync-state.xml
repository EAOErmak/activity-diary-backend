<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0008-user-sync-state" author="system">

        <createTable tableName="user_sync_state">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="entity_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

            <column name="last_updated" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="user_sync_state"
                columnNames="user_id, entity_type"
                constraintName="pk_user_sync_state"/>

        <addForeignKeyConstraint
                baseTableName="user_sync_state"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_user_sync_state_user"
                onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>

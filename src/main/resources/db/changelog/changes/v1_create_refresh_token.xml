<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="v1-07-create-refresh-token" author="diary">

        <!-- ===================== -->
        <!-- TABLE: refresh_token -->
        <!-- ===================== -->

        <createTable tableName="refresh_token">

            <!-- ✅ BaseEntity -->
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <!-- ===================== -->
            <!-- ENTITY FIELDS -->
            <!-- ===================== -->

            <!-- ✅ владелец токена -->
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <!-- ✅ хэш токена -->
            <column name="token_hash" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>

            <!-- ✅ срок жизни -->
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <!-- ✅ отозван ли -->
            <column name="revoked" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <!-- ✅ ссылка на новый токен при ротации -->
            <column name="replaced_by_id" type="BIGINT"/>

        </createTable>

        <!-- ===================== -->
        <!-- FOREIGN KEYS -->
        <!-- ===================== -->

        <!-- ✅ refresh_token → user -->
        <addForeignKeyConstraint
                baseTableName="refresh_token"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_refresh_token_user"/>

        <!-- ✅ refresh_token → refresh_token (replaced_by) -->
        <addForeignKeyConstraint
                baseTableName="refresh_token"
                baseColumnNames="replaced_by_id"
                referencedTableName="refresh_token"
                referencedColumnNames="id"
                constraintName="fk_refresh_token_replaced"/>

        <!-- ===================== -->
        <!-- INDEXES -->
        <!-- ===================== -->

        <!-- ✅ быстрый поиск активного токена по хэшу -->
        <createIndex indexName="idx_refresh_token_hash"
                     tableName="refresh_token">
            <column name="token_hash"/>
        </createIndex>

        <!-- ✅ все токены пользователя -->
        <createIndex indexName="idx_refresh_token_user"
                     tableName="refresh_token">
            <column name="user_id"/>
        </createIndex>

        <!-- ✅ быстрая очистка протухших -->
        <createIndex indexName="idx_refresh_token_expires"
                     tableName="refresh_token">
            <column name="expires_at"/>
        </createIndex>

        <!-- ✅ фильтрация активных / отозванных -->
        <createIndex indexName="idx_refresh_token_revoked"
                     tableName="refresh_token">
            <column name="revoked"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="v1-12-create-verification-codes" author="diary">

        <createTable tableName="verification_codes">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="verification_code" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="attempts" type="INT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="verification_codes"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_verification_codes_user"
                onDelete="CASCADE"/>

        <createIndex indexName="idx_verification_codes_user_id" tableName="verification_codes">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_verification_codes_expires_at" tableName="verification_codes">
            <column name="expires_at"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="2025-11-24-create-verification-codes" author="you">

        <createTable tableName="verification_codes">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="false"
                             unique="true"
                             foreignKeyName="fk_vc_user"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>

            <column name="verification_code" type="varchar(6)">
                <constraints nullable="false"/>
            </column>

            <column name="expires_at" type="timestamp">
                <constraints nullable="false"/>
            </column>

            <column name="attempts" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="verification_codes" indexName="idx_vc_user">
            <column name="user_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>

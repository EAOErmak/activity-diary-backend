<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="v1-11-create-user-accounts" author="diary">
        <createTable tableName="user_accounts">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="provider" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>

            <column name="provider_id" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>

            <column name="password_hash" type="VARCHAR(255)"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="user_accounts"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_user_accounts_user"
                onDelete="CASCADE"/>

        <addUniqueConstraint
                tableName="user_accounts"
                columnNames="provider, provider_id"
                constraintName="uk_user_accounts_provider_provider_id"/>

        <createIndex indexName="idx_user_accounts_user_id" tableName="user_accounts">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_user_accounts_provider" tableName="user_accounts">
            <column name="provider"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
